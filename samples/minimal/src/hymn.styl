@import 'nib'
@import 'jeet'

darkColor = rgba(0, 0, 0, 0.8)
lightColor = rgba(0, 0, 0, 0.7)
lighterColor = rgba(0, 0, 0, 0.6)
progressColor = #039be5
progressBackground = rgba(0, 0, 0, 0.1)
playerBackground = #fff

controlBarHeight = 55px
controlButtonWidth = 55px
playerHeight = controlBarHeight
playerWidth = 100%

betterfont()
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility

iconfont()
  betterfont()
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1

reset-button()
  vertical-align: middle
  outline: none
  border: none
  font-size: 1rem
  background-color: inherit
  color: inherit

html, body
  height: 100%
  width: 100%

.hymn-player
  betterfont()
  align(vertical)
  
  height: playerHeight
  width: playerWidth

  color: darkColor
  background-color: playerBackground

  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight: 300

  .hymn-controls
    absolute: bottom left
    height: controlBarHeight
    width: playerWidth

  .hymn-control
    iconfont()
    reset-button()

    font-size: 150%

  .hymn-prev
    align(vertical)
    absolute: bottom left
    &:before
      content: '\e603'

  .hymn-skip
    align(vertical)
    absolute: bottom right
    &:before
      content: '\e604'

  .hymn-play, .hymn-pause
    align()

  .hymn-play
    &:before
      content: '\e600'

  .hymn-pause
    &:before
      content: '\e601'

