@import 'nib'
@import 'jeet'

darkColor = rgba(0, 0, 0, 0.8)
lightColor = rgba(0, 0, 0, 0.7)
lighterColor = rgba(0, 0, 0, 0.6)
progressColor = #039be5
progressBackground = rgba(0, 0, 0, 0.1)
playerBackground = #fff

betterfont()
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility

iconfont()
  betterfont()
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1

transitionit()
  transition: all 0.4s ease-in-out 0.4s
  transform: translate3d(0, 0, 0)

reset-progress()
  cursor: pointer
  appearance: none
  vertical-align: middle
  border: none

reset-button()
  vertical-align: middle
  outline: none
  border: none
  font-size: 1rem
  background-color: inherit
  color: inherit

.hymn-player
  betterfont()
  stack()
  center()
  user-select: none
  overflow: hidden
  position: relative
  height: 100%
  width: 100%

  color: darkColor
  background-color: playerBackground

  font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
  font-weight: 300

  .hymn-artwork
    col(1/1)
    center()
    height: 50%
    max-height: 500px
    background-color: lighterColor
    background-size: cover
    background-position: center center
    background-repeat: no-repeat

  .hymn-info
    col(1/1)
    center()
    padding: 40px
    text-align: center

    .hymn-title
      overflow: ellipsis
      font-size: 40px
      line-height: 150%

    .hymn-artist
      overflow: ellipsis
      font-style: italic
      font-size: 20px
      line-height: 150%

  .hymn-controls
    .hymn-progress
      reset-progress()
      col(1/1)
      absolute: bottom left
      height: 20px
      background-color: progressBackground

      &::-webkit-progress-bar
        background-color: progressBackground

      &::-webkit-progress-value
        background-color: progressColor

      &::-moz-progress-bar
        background-color: progressColor

    .hymn-control
      iconfont()
      reset-button()

    .hymn-play, .hymn-pause
      col(1/1)
      center()
      font-size: 40px

    .hymn-play
      &:before
        content: '\e600'

    .hymn-pause
      &:before
        content: '\e601'

    .hymn-skip
      display: none


